{
  "extends": "expo/tsconfig.base",
  "include": ["src", ".eslintrc.js", "App.tsx", "babel.config.ts"],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": [
      "@types/styled-components-react-native",
      "jest"
    ]
  }
}
